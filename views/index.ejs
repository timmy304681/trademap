<% layout('layout') %>
<!-- 使用vscode 插件 HTML CSS support 以下路徑去抓css -->
<!-- <link href="../public/styles/bootstrap.css" rel="stylesheet" /> -->
<link rel="stylesheet" href="../public/styles/index.css" />

<div class="container-fluid h-75" style="padding: 0">
  <!-- search -->
  <div class="row">
    <div class="col-lg-12 card-margin">
      <div class="search-card search-form w-50">
        <div class="search-card-body p-0">
          <form id="search-form">
            <div class="row">
              <div class="col-12">
                <div class="row no-gutters">
                  <div class="col-lg-2 col-md-3 col-sm-12 p-0">
                    <select name="distance" id="distance" class="form-control-lg col-12">
                      <option value="1">1 km</option>
                      <option value="3">3 km</option>
                      <option value="5">5 km</option>
                      <option value="10">10 km</option>
                    </select>
                  </div>
                  <div class="col-lg-9 col-md-6 col-sm-12 p-0">
                    <input
                      name="keyword"
                      id="keyword"
                      type="text"
                      placeholder="商品搜尋"
                      class="form-control"
                    />
                  </div>
                  <div class="col-lg-1 col-md-3 col-sm-12 p-0">
                    <button id="btn-submit" class="btn btn-base">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="feather feather-search"
                      >
                        <circle cx="11" cy="11" r="8"></circle>
                        <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                      </svg>
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <!-- search -->

  <div id="map" class="h-100 ms-3 me-3" style="z-index: 1"></div>
</div>
<!-- Modal -->
<div
  class="modal fade"
  id="product-modal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-scrollable modal-xl">
    <div class="modal-content">
      <div class="modal-header p-2">
        <h5 class="modal-title" id="exampleModalLabel">商品細節頁面</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div id="product-modal-body" class="modal-body p-0">...</div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<script
  id="map-script"
  type="module"
  src="../public/js/index.js"
  HERE_API_KEY="<%= HERE_API_KEY%>"
  MAPTILER_API_KEY="<%= MAPTILER_API_KEY%>"
></script>
