<% layout('layout') %>
<!-- 使用vscode 插件 HTML CSS support 以下路徑去抓css -->
<!-- <link href="../public/styles/bootstrap.css" rel="stylesheet" /> -->

<div class="container">
  <div class="align-items-center">
    <form name="form" enctype="multipart/form-data" id="form-summit">
      <div>
        <label>商品名稱： <input type="text" /></label>
      </div>
      <div>
        <label>商品價錢： <input type="text" /></label>
      </div>
      <div>
        <label
          >商品描述： <textarea name="description" id="description" cols="30" rows="10"></textarea>
        </label>
      </div>
      <div>
        <label
          >地點：
          <div id="place-select"></div
        ></label>
        <div class="position-fixed" style="z-index: 10000">
          <input id="inputbox" />
        </div>
        <div id="map" style="width: 100%; height: 400px"></div>
      </div>

      <div>
        <button>確定送出商品</button>
      </div>
    </form>
  </div>
</div>
<script
  id="map-script"
  type="module"
  src="../public/js/product.js"
  HERE_API_KEY="<%= HERE_API_KEY%>"
></script>
