<div class="container h-75 mt-5">
  <div class="row h-100">
    <div class="col-6 border tm-order-area h-100">
      <div class="tm-label text-center">商品列表</div>
      <select id="order-select" class="form-select">
        <option value="all">全部</option>
        <option value="sell">販賣</option>
        <option value="buy">購買</option>
      </select>

      <ul id="order-list" class="list-group">
        <li class="list-group-item tm-order-box" hidden>
          <div class="number"></div>
          <div class="title tm-order-product-title"></div>
          <div class="place"></div>
          <div class="row">
            <div class="price col tm-main-color"></div>
            <div class="time col-5"></div>
          </div>
          <div class="d-flex justify-content-end align-content-center">
            <div class="status me-3 m-auto tm-main-color tm-sold-status"></div>
            <button class="btn-sold add-to-cart btn tm-sold-btn" type="button" hidden>
              完成交易
            </button>
          </div>
        </li>
      </ul>
    </div>
    <div class="col-6 border tm-order-area h-100">
      <div class="tm-label text-center">商品細節</div>
      <div id="product-details-page"></div>
    </div>
  </div>
</div>
<script src="../public/js/order.js"></script>
