<% layout('layout') %>
<!-- 使用vscode 插件 HTML CSS support 以下路徑去抓css -->
<!-- <link href="../public/styles/bootstrap.css" rel="stylesheet" /> -->
<div class="container-xxl">
  <select id="order-select">
    <option value="all">全部</option>
    <option value="sell">販賣</option>
    <option value="buy">購買</option>
  </select>

  <div class="row">
    <div class="col-6 border tm-order-area" style="height: 800px">
      <div class="tm-order-title">商品列表</div>

      <ul id="order-list" class="list-group">
        <li class="list-group-item tm-order-box" hidden>
          <div class="number"></div>
          <div class="title tm-order-product-title"></div>
          <div class="place"></div>
          <div class="row">
            <div class="price col"></div>
            <div class="time col-5"></div>
            <div class="status col-2 text-right"></div>
          </div>
        </li>
      </ul>
    </div>
    <div class="col-6 border tm-order-area" style="height: 800px">
      <div>商品細節</div>
      <div id="product-details-page"></div>
    </div>
  </div>
</div>
<script src="../public/js/order.js"></script>
