<% layout('layout') %>
<!-- 使用vscode 插件 HTML CSS support 以下路徑去抓css -->
<!-- <link href="../public/styles/bootstrap.css" rel="stylesheet" /> -->
<div class="container" style="height: 1000px">
  <div class="d-flex justify-content-center h-100">
    <div class="card">
      <div class="card-header">
        <h3>Sign UP</h3>
        <div class="d-flex justify-content-end social_icon">
          <span><i class="fab fa-facebook-square"></i></span>
          <span><i class="fab fa-google-plus-square"></i></span>
          <span><i class="fab fa-twitter-square"></i></span>
        </div>
      </div>
      <div class="card-body">
        <form onsubmit="return false" name="form" enctype="multipart/form-data">
          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-user"></i></span>
            </div>
            <input
              name="email"
              id="input-email"
              type="text"
              class="form-control"
              placeholder="email"
            />
          </div>

          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-user"></i></span>
            </div>
            <input
              name="name"
              id="input-name"
              type="text"
              class="form-control"
              placeholder="name"
            />
          </div>

          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-key"></i></span>
            </div>
            <input
              name="password"
              id="input-password"
              type="password"
              class="form-control"
              placeholder="password"
            />
          </div>
          <div class="h4" style="color: aliceblue">請上傳大頭貼</div>
          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-user"></i></span>
            </div>
            <input name="photo" id="input-photo" type="file" class="form-control" />
          </div>

          <div class="form-group">
            <button id="btn-signup" type="submit" class="btn float-right login_btn">確認</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<link rel="stylesheet" href="../public/styles/profile.css" />
<script src="../public/js/signup.js"></script>
