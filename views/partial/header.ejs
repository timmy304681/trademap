<script>
  (async () => {
    const authentication = await localStorage.getItem('Authorization');
    // 若無token就不做任何call api驗證
    if (authentication == null) {
      return;
    }
    // 有token，就call api驗證
    try {
      const params = {
        headers: { 'content-type': 'application/json', authorization: authentication },
      };
      const response = await axios.get(`/api/1.0/users`, params);
      const userProfile = response.data;

      $('#image-insert').html(
        `<img src= ${userProfile.photo} class="rounded-circle mr-1" width="40" height="40"/>`
      );
      $('#name-insert').html(`${userProfile.name}`);
      $('#signOut-insert').html(`<a class="nav-link text-light" onclick="signOut()">Sign Out</a>`);
    } catch (err) {
      console.log(err);
    }
  })();

  async function signOut() {
    localStorage.removeItem('Authorization');
    await Swal.fire({
      icon: 'success',
      title: '已登出',
    });
    location.href = '/profile';
  }
</script>
